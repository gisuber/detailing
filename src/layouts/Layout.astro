---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";

export interface Props {
  title: string;
}

// const { src } = await getImage({
//   src: "../../assets/hero.png",
//   width: 800,
//   height: 742,
//   format: "avif",
// });
// console.log(src);

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Elite Aircraft Detailing Service"
  : "Aircraft Detailing - Touchpoint detailing done excellently to ensure immaculate aircrafts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Aircraft detailing using specialized cleaning solutions and equipment that are specifically designed for use on aircraft surfaces. Experienced technicians who are trained in the proper techniques for cleaning and maintaining aircraft."
      canonical={canonicalURL}
      twitter={{
        creator: "@eliteaircraftdetailing",
        site: "@eliteaircraftdetailing",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Elite aircraft detailing- ensuring immaculately detailed airplanes`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "elite aircraft detailing getting the best results by using high-quality products and professional-grade equipment. We have a good reputation in the aircraft detailing industry.  ",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
